<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pl.first.sudoku.view.MainMenuController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <Label text="Sudoku Game" style="-fx-font-size: 24px;"/>
   <Label text="Select Difficulty:" style="-fx-font-size: 16px;"/>
   <ComboBox fx:id="difficultyComboBox" prefWidth="200"/>
   <Button text="Start Game" onAction="#startGame" prefWidth="200"/>
</VBox>